<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="movietracker.NewMovieDialogController">
    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    
    <Label text="Director:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="directorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    
    <Label text="Date Watched" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="dateWatchedField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    
    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    
    <Label text="Release Year:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="releaseYearField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    
    <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    
    <Button onAction="#handleSave" text="Save" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <Button onAction="#handleCancel" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
